@page "/dbedit/{type}"

<PageTitle>Веб-АКУС DB-Edit</PageTitle>

@using wSHSApp.Components.Reports

@if (Type == "personal")
{
    <PersonalEditor />
} 
else if (Type == "material")
{
    <MaterialEditor />
} 
else if (Type == "place")
{
    <PlaceEditor />
}
else if (Type == "options")
{
    <OptionsEditor />
}
else
{
    <NoData Message="Выберите тип редактирования в меню сверху." />
}


@code {
    [Parameter] public string? Type { get; set; }

    public void Dispose()
    {

    }
}
