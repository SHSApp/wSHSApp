<Bar Breakpoint="Breakpoint.Desktop" ThemeContrast="ThemeContrast.Dark">
    <BarBrand>
    </BarBrand>
    <BarToggler Class="mx-3" />
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="">Главная</BarLink>
            </BarItem>
            <AuthorizeView>
                <Authorized>
                    <BarItem>
                        <BarDropdown>
                            <BarDropdownToggle>Сервисное меню</BarDropdownToggle>
                            <BarDropdownMenu>
                                <BarDropdown>
                                    <BarDropdownToggle>БД макросов</BarDropdownToggle>
                                    <BarDropdownMenu>
                                        <BarDropdownItem To="/dbedit/personal">Список сотрудников</BarDropdownItem>
                                        <BarDropdownItem To="/dbedit/material">Нарушения режима</BarDropdownItem>
                                        <BarDropdownItem To="/dbedit/place">Места нарушений</BarDropdownItem>
                                        <BarDropdownDivider />
                                        <BarDropdownItem To="/dbedit/options">Опции</BarDropdownItem>
                                    </BarDropdownMenu>
                                </BarDropdown>
                            </BarDropdownMenu>
                        </BarDropdown>
                    </BarItem>
                </Authorized>
                <NotAuthorized>
                    <BarItem>
                        <BarDropdown>
                            <BarDropdownToggle>Справочная информация</BarDropdownToggle>
                            <BarDropdownMenu>
                                <BarDropdownItem>Образцы заявлений</BarDropdownItem>
                                <BarDropdownDivider />
                                <BarDropdownItem>График работы столовой</BarDropdownItem>
                                <BarDropdownItem>График работы БПК</BarDropdownItem>
                            </BarDropdownMenu>
                        </BarDropdown>
                    </BarItem>
                </NotAuthorized>
            </AuthorizeView>            
        </BarStart>
        <BarEnd>
            <BarItem Class="px-4">
                <LoginDisplay />
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>

